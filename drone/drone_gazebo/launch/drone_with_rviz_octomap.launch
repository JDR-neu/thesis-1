<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- NOT UPDATED -->
  <param name="use_sim_time" value="true"/>

  <!-- Launch the gazebo simulator -->
  <!-- Make the world name a parameter to load from terminal -->
  <arg name="world" default="warehouse"/>
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <param name="use_sim_time" value="true"/>
    <arg name="world_name" value="$(find drone_gazebo)/worlds/$(arg world).world"/>
  </include>

  <!-- Load a map in RViz with octomap server -->
  <node pkg="octomap_server" type="octomap_server_node" name="octomap_server_node" output="screen" args="$(find drone_gazebo)/maps/$(arg world).ot">
    <param name="frame_id" value="map"/>
  </node>


    <!-- Spawn simulated quadrotor uav -->
  <include file="$(find drone_gazebo)/launch/spawn_quadrotor.launch" >
    <arg name="model" value="$(find drone_description)/urdf/italdron_evo4hse.gazebo.xacro"/>
    <arg name="controllers" value="
        controller/attitude
        controller/velocity
        controller/position
        "/>
  </include>

  <!-- Height estimation node -->
  <node name="estimator" type="estimator" pkg="drone_gazebo" />

  <!-- Teleoperate the drone using the keyboard -->
  <node pkg="drone_gazebo" type="teleop" name="teleop" output="screen" />

  <!-- Launch Rviz with pre loaded configuration-->
  <node name="rviz" type="rviz" pkg="rviz" args="-d $(find drone_gazebo)/rviz_cfg/config.rviz"/>

</launch>
